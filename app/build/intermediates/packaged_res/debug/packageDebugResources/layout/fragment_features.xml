<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:gravity="center_horizontal">

        <!-- Title Section -->
        <TextView
            android:id="@+id/fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Developer Options Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dev_options_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_gray"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Image -->
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_dev_options"
                    android:contentDescription="Developer Options"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/warning_yellow" />

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Developer Options"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Toggle -->
                <Switch
                    android:id="@+id/dev_options_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="UseSwitchCompatOrMaterialXml,DuplicateSpeakableTextCheck" />

                <!-- Hint -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Hint"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray"
                    tools:ignore="ImageContrastCheck" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Ghost Mode Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ghost_mode_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_gray"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Image -->
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_ghost_mode"
                    android:contentDescription="Ghost Mode"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/white" />

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ghost Mode"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Toggle -->
                <Switch
                    android:id="@+id/ghost_mode_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <!-- Hint -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Hint"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray"
                    tools:ignore="ImageContrastCheck" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Distraction Free Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/distraction_free_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_gray"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Image -->
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_distraction_free"
                    android:contentDescription="Distraction Free"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/white" />

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Distraction Free"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Toggle -->
                <Switch
                    android:id="@+id/distraction_free_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <!-- Hint -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Hint"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray"
                    tools:ignore="ImageContrastCheck" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Remove Ads Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/remove_ads_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/dark_gray"
            android:clickable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Image -->
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_remove_ads"
                    android:contentDescription="Remove Ads"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/white" />

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remove Ads"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Toggle -->
                <Switch
                    android:id="@+id/remove_ads_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
