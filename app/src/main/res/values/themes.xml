<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/gray</item>

        <!-- Darker version of the primary branding color -->
        <item name="colorPrimaryDark">@color/gray</item>

        <!-- Accent color for widget highlights -->
        <item name="colorAccent">@color/gray</item>

        <!-- Control the color of the switch thumb and track -->
        <item name="colorControlActivated">@color/warning_yellow</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlHighlight">@color/gray</item>
    </style>

    <style name="Theme.InstaEclipse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>
